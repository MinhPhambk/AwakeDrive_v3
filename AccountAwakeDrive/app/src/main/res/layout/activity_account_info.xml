<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FBFF"
    tools:context=".AccountInfoActivity">

    <!-- Frame -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headFrame"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#63CBFE"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/arrow_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="16dp" />

        <ImageView
            android:id="@+id/AvaUser"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="285dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/cat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/inter_bold"
            android:text="Cat"
            android:textAlignment="viewStart"
            android:textColor="#01527A"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/AvaUser"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/inter"
            android:text="meomeomeo@gmail.com"
            android:textAlignment="viewEnd"
            android:textColor="#01527A"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/AvaUser"
            app:layout_constraintTop_toBottomOf="@+id/name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--Thông tin cá nhân-->
    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_margin="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/inter"
        android:lineSpacingExtra="8dp"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="5"
        android:text="Tên đầy đủ:\nĐịa chỉ email:\nĐiện thoại:\nThiết bị đã kết nối:\nNgày đăng ký:"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headFrame" />

    <TextView
        android:id="@+id/userInfo"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_margin="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/inter"
        android:lineSpacingExtra="8dp"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="5"
        android:text="Meo\nmeomeomeo@gmail.com\n0987654321\n\n10/10/2024"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/info"
        app:layout_constraintTop_toBottomOf="@+id/headFrame" />

    <View
        android:id="@+id/group_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="180dp"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="@+id/userInfo"
        tools:layout_editor_absoluteX="0dp" />

<!--Phương thức đăng nhập-->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_bold"
        android:text="Phương thức đăng nhập"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group_divider" />

    <!--Mật khẩu-->
    <Button
        android:id="@+id/btn_password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/border"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/inter"
        android:text="Mật khẩu: ********"
        android:textSize="16sp"

        app:layout_constraintBottom_toBottomOf="@+id/btn_password"
        app:layout_constraintStart_toEndOf="@+id/imagePassword"
        app:layout_constraintTop_toTopOf="@+id/btn_password"
        app:layout_constraintVertical_bias="0.592" />

    <ImageView
        android:id="@+id/imagePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/password"
        app:layout_constraintStart_toStartOf="@+id/btn_password"
        app:layout_constraintTop_toTopOf="@+id/btn_password" />

    <!--Đăng nhập bằng Google-->

    <Button
        android:id="@+id/btn_loginByGoogle"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/border"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/inter"
        android:text="Đăng nhập bằng Google"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_loginByGoogle"
        app:layout_constraintStart_toEndOf="@+id/imageGoogle"
        app:layout_constraintTop_toTopOf="@+id/btn_loginByGoogle"
        app:layout_constraintVertical_bias="0.592" />

    <ImageView
        android:id="@+id/imageGoogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo_google"
        app:layout_constraintStart_toStartOf="@+id/btn_loginByGoogle"
        app:layout_constraintTop_toTopOf="@+id/btn_loginByGoogle" />

    <!--Đăng nhập bằng Facebook-->

    <Button
        android:id="@+id/btn_loginByFacebook"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/border"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_loginByGoogle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/inter"
        android:text="Đăng nhập bằng Facebook"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_loginByFacebook"
        app:layout_constraintStart_toEndOf="@+id/imageFacebook"
        app:layout_constraintTop_toTopOf="@+id/btn_loginByFacebook"
        app:layout_constraintVertical_bias="0.592" />

    <ImageView
        android:id="@+id/imageFacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo_facebook"
        app:layout_constraintStart_toStartOf="@+id/btn_loginByFacebook"
        app:layout_constraintTop_toTopOf="@+id/btn_loginByFacebook" />


    <!--Đăng nhập bằng AppleID-->

    <Button
        android:id="@+id/btn_loginByAppleID"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/border"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_loginByFacebook" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/inter"
        android:text="Đăng nhập bằng AppleID"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_loginByAppleID"
        app:layout_constraintStart_toEndOf="@+id/imageFacebook"
        app:layout_constraintTop_toTopOf="@+id/btn_loginByAppleID"
        app:layout_constraintVertical_bias="0.592" />

    <ImageView
        android:id="@+id/imageApple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo_apple"
        app:layout_constraintStart_toStartOf="@+id/btn_loginByAppleID"
        app:layout_constraintTop_toTopOf="@+id/btn_loginByAppleID" />


</androidx.constraintlayout.widget.ConstraintLayout>
