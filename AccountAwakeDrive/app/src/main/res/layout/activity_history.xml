<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:src="@drawable/back_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Dữ liệu tóm tắt-->

    <!--    Thời gian sử dụng-->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/inter_bold"
        android:text="Lịch sử đo đạc"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTimeUsage"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/outer_background"
        android:fontFamily="@font/inter"
        android:gravity="top|center"
        android:padding="8dp"
        android:text="Thời gian sử dụng"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/textDaysHours"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/inner_background"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:padding="16dp"
        android:text="3 ngày 4 giờ"
        android:textColor="#000000"
        android:textSize="20sp"

        app:layout_constraintBottom_toBottomOf="@+id/textTimeUsage"
        app:layout_constraintEnd_toEndOf="@+id/textTimeUsage"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="@+id/textTimeUsage" />

    <!--    Trung bình thời gian sử dụng-->

    <TextView
        android:id="@+id/textModerateUsage"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/outer_background"
        android:fontFamily="@font/inter"
        android:gravity="top|center"
        android:padding="8dp"
        android:text="Trung bình sử dụng"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintEnd_toStartOf="@+id/textPercentAwake"
        app:layout_constraintStart_toEndOf="@+id/textTimeUsage"
        tools:layout_editor_absoluteY="55dp" />

    <TextView
        android:id="@+id/textTime"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/inner_background"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:padding="16dp"
        android:text="16 giờ 2 phút"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textModerateUsage"
        app:layout_constraintEnd_toEndOf="@+id/textModerateUsage"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="@+id/textModerateUsage" />

    <!--% tỉnh táo-->

    <TextView
        android:id="@+id/textPercentAwake"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/outer_background"
        android:fontFamily="@font/inter"
        android:gravity="top|center"
        android:padding="8dp"
        android:text="Phần trăm tỉnh táo"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textModerateUsage"
        app:layout_constraintWidth_percent="0.3"
        tools:layout_editor_absoluteY="56dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textPercent"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/inner_background"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:padding="16dp"
        android:text="99%"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textPercentAwake"
        app:layout_constraintEnd_toEndOf="@+id/textPercentAwake"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="@+id/textPercentAwake" />

<!--Đảnh giá kết quả đo-->

    <TextView
        android:id="@+id/frameConclusion"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/outer_background"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTimeUsage" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/sunny_icon"
        app:layout_constraintStart_toStartOf="@+id/frameConclusion"
        app:layout_constraintTop_toTopOf="@+id/frameConclusion" />

    <TextView
        android:id="@+id/textConclusion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/inter"
        android:text="Jenky là một con ong chăm chỉ"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/frameConclusion" />

    <TextView
        android:id="@+id/textAdvice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter"
        android:text="Cần ngủ đủ giấc để đảm bảo sức khỏe"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textConclusion" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ACB4B9"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/frameConclusion"
        tools:layout_editor_absoluteX="-9dp"
        tools:layout_editor_absoluteY="294dp"
        tools:ignore="MissingConstraints" />

<!--    Biểu đồ tần số trạng thái trung bình theo ngày-->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_bold"
        android:text="Biểu đồ tần số trạng thái trung bình theo ngày"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/frameConclusion"
        tools:layout_editor_absoluteX="20dp"
        tools:ignore="MissingConstraints" />
<!--    Bổ sung wave chart-->
    <View
        android:id="@+id/waveChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:background="#FB3029"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="2dp" />

    <View
        android:id="@+id/div"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ACB4B9"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/waveChart"
        tools:layout_editor_absoluteX="-9dp"
        tools:layout_editor_absoluteY="294dp"
        tools:ignore="MissingConstraints" />
<!--    Lịch sử đo -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_bold"
        android:text="Lịch sử đo"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/div"
        tools:layout_editor_absoluteX="16dp"
        tools:ignore="MissingConstraints" />
<!-- Lịch sử đo gần nhất-->
    <Button
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toBottomOf="@id/timeSurvey1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView4" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bar_chart_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/first"
        app:layout_constraintTop_toTopOf="@+id/first"/>

    <TextView
        android:id="@+id/nameDevice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_bold"
        android:text="Ngọc's AwakeDrive"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/timeSurvey1"
        app:layout_constraintStart_toStartOf="@id/first"
        app:layout_constraintTop_toTopOf="@id/first" />

    <TextView
        android:id="@+id/timeSurvey1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/inter"
        android:text="07:00:23 12/01/2025 - 09:02:34 12/01/2025"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/first"
        app:layout_constraintStart_toStartOf="@id/first"
        app:layout_constraintTop_toBottomOf="@+id/nameDevice1" />
<!--Lịch sử đo thứ 2-->
    <Button
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first"
        app:layout_constraintBottom_toBottomOf="@id/timeSurvey2"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bar_chart_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/second"
        app:layout_constraintTop_toTopOf="@+id/second"/>

    <TextView
        android:id="@+id/nameDevice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_bold"
        android:text="Ngọc's AwakeDrive"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/second"
        app:layout_constraintTop_toTopOf="@id/second" />

    <TextView
        android:id="@+id/timeSurvey2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter"
        android:text="07:00:23 11/01/2025 - 09:02:34 11/01/2025"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/second"
        app:layout_constraintStart_toStartOf="@id/second"
        app:layout_constraintTop_toBottomOf="@+id/nameDevice2" />

<!--    Lịch sử đo lần 3-->
    <Button
        android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/second"
        app:layout_constraintBottom_toBottomOf="@id/timeSurvey3"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bar_chart_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/third"
        app:layout_constraintTop_toTopOf="@+id/third"/>

    <TextView
        android:id="@+id/nameDevice3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_bold"
        android:text="Ngọc's AwakeDrive"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/third"
        app:layout_constraintTop_toTopOf="@id/third" />

    <TextView
        android:id="@+id/timeSurvey3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:fontFamily="@font/inter"
        android:textSize="14sp"
        android:text="12:00:23 06/01/2025 - 18:02:34 09/01/2025"
        app:layout_constraintTop_toBottomOf="@+id/nameDevice3"
        app:layout_constraintStart_toStartOf="@id/third"
        app:layout_constraintBottom_toBottomOf="@id/third"/>

<!--Lịch sử đo lần 4 gần nhất-->
    <Button
        android:id="@+id/fourth"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/third"
        app:layout_constraintBottom_toBottomOf="@id/timeSurvey4"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bar_chart_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/fourth"
        app:layout_constraintTop_toTopOf="@+id/fourth"/>

    <TextView
        android:id="@+id/nameDevice4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_bold"
        android:text="Ngọc's AwakeDrive"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/fourth"
        app:layout_constraintTop_toTopOf="@id/fourth" />

    <TextView
        android:id="@+id/timeSurvey4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:fontFamily="@font/inter"
        android:textSize="14sp"
        android:text="07:00:23 05/01/2025 - 09:02:34 05/01/2025"
        app:layout_constraintTop_toBottomOf="@+id/nameDevice4"
        app:layout_constraintStart_toStartOf="@id/fourth"
        app:layout_constraintBottom_toBottomOf="@id/fourth"/>


</androidx.constraintlayout.widget.ConstraintLayout>